---
import SocialMedia from "./SocialMedia.astro";

const { title, description, email, telephone }: MahoyContact =
  Astro.props.contact;
const socialMedia = Astro.props.socialMedia;
const link = Astro.props.link;
---

<section
  id={link.toLowerCase()}
  class="w-full grid grid-cols-1 sm:grid-cols-2 py-7 bg-primary"
>
  <article class="col-span-2 flex flex-col gap-7 justify-center items-center">
    <h2
      class="mx-7 text-4xl font-semibold bg-clip-text bg-gradient-to-br from-secondary to-primary text-transparent"
    >
      {title}
    </h2>
    <p class="mx-7 text-center text-balance">{description}</p>

    <div class="w-full grid grid-cols-1 md:grid-cols-2">
      <div class="col-span-1">
        <a
          href={telephone.href}
          target="_blank"
          class="flex justify-center items-center font-semibold gap-1 transition-all duration-200"
        >
          <img
            loading="eager"
            class="size-7"
            src=`/src/assets/${telephone.name.toLocaleLowerCase()}.svg`
            alt={telephone.alt}
          />
          <span>{telephone.tel}</span>
        </a>
      </div>
      <div class="col-span-1">
        <a
          href={email.href}
          target="_blank"
          class="flex justify-center items-center font-semibold gap-1 transition-all duration-200"
        >
          <img
            loading="eager"
            class="size-7"
            src=`/src/assets/${email.name.toLocaleLowerCase()}.svg`
            alt={email.name}
          />
          <span>{email.gmail}</span>
        </a>
      </div>
    </div>
    <SocialMedia {socialMedia} />
  </article>
</section>
