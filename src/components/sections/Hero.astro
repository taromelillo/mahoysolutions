---
const { heroText, heroButton, heroTitle } = Astro.props.hero;
const { contact } = Astro.props.links;

import Button from "@components/ui/Button.astro";
import Logo from "@components/ui/Logo.astro";
---

<section
  id="hero"
  class="w-full grid grid-cols-2 items-center bg-primary py-21 gap-14"
>
  <article
    class="col-span-2 lg:col-span-1 flex flex-col items-center justify-center gap-5 h-full"
  >
    <h1
      class="text-4xl sm:text-5xl font-semibold text-balance text-center bg-clip-text bg-gradient-to-br from-secondary to-primary text-transparent leading-snug"
    >
      {heroTitle}
    </h1>
    <p class="text-md text-gray text-balance text-center">
      {heroText}
    </p>
    <Button button={heroButton} href={`#${contact.toLocaleLowerCase()}`} />
  </article>
  <article
    class="col-span-2 lg:col-span-1 flex flex-col items-center justify-center min-h-[388px]"
  >
    <Logo />
  </article>
</section>
