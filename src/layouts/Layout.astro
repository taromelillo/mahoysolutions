---
import { getLangFromUrl } from "@i18n/utils";
const lang = getLangFromUrl(Astro.url);
const {
  links,
  title,
  index,
  metadata,
  footer,
}: Record<string, keyof MahoyData> = Astro.props;

import "./src/styles/global.css";
import Header from "@components/scafolding/Header.astro";
import Footer from "@components/scafolding/Footer.astro";
import Sidenav from "@components/scafolding/Sidenav.astro";
import Head from "@components/scafolding/Head.astro";
---

<!doctype html>
<html {lang} class="scroll-smooth">
  <Head {metadata} />
  <body class="font-sans flex flex-col items-center">
    <Header links={links} />
    <Sidenav links={links} />
    <main class="max-w-7xl min-h-screen mt-20 mx-auto sm:px-5">
      <slot />
    </main>
    <Footer />
  </body>
</html>
